@using DotMatrix.Helpers
@model DotMatrix.Common.Api.UpdateApiModel
<div class="d-flex flex-fill">
	<div class="card" style="width:100%">
		<div class="card-body">
			<h5 class="card-title">Api Settings</h5>
			@*<h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>*@
		<div>
			@using (Ajax.BeginForm("UpdateApiSettings", "User", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "apiTarget" }, new { @class = "" }))
			{
				@Html.AntiForgeryToken()
				@Html.WriterValidationSummary()
				<div id="apialert" class="alert alert-danger text-center" style="display: none">
					<p></p>
				</div>
				<div class="form-group">
					<div>@Html.CheckBox("IsApiEnabled") Enable API</div>
					<small>Api Key</small>
					@Html.TextBox("ApiKey", Model.ApiKey, new { @class = "form-control form-control-sm", @readonly = "readonly" })
				</div>
				<div class="form-group">
					<small>Api Secret</small>
					@Html.TextBox("ApiSecret", Model.ApiSecret, new { @class = "form-control form-control-sm", @readonly = "readonly" })
				</div>
				<div class="form-group">
					<input type="text"  class="form-control form-control-sm invisible" />
				</div>
				<div class="form-group">
					<div class="d-flex">
						<input type="submit" value="Save Changes" class="btn btn-primary btn-sm w-100 mr-1" />
						<a href="/Home/Api" class="btn btn-secondary btn-sm w-100">Documentation</a>
					</div>
				</div>
			}
		</div>
		</div>
	</div>
</div>



