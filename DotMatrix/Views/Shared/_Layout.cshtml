<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - BitPixel</title>
	<link href="~/Content/bootstrap.css" rel="stylesheet" />
	<link href="~/Content/fontawesome.css" rel="stylesheet" />
	<link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm nav- navbar-dark bg-dark border-bottom box-shadow">
			<div class="container-fluid">
				<a class="navbar-brand" href="@Url.Action("Index", "Home")">BitPixel</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-navbar-collapse">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div id="main-navbar-collapse" class="navbar-collapse collapse">
					<div class="d-flex justify-content-between flex-fill">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link" href="@Url.Action("Index", "Pixel")">Play</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="@Url.Action("Index", "Explore")">Explore</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="@Url.Action("Index", "Scores")">Scoreboard</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="@Url.Action("Index", "Prizes")">Prizes</a>
							</li>
						</ul>
						@if (Request.IsAuthenticated)
						{
							using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
							{
								@Html.AntiForgeryToken()

								<ul class="navbar-nav">
									<li class="nav-item">
										<a id="creditslink" class="btn btn-outline-warning mr-4" href="@Url.Action("Index", "Points")">Get Points!</a>
									</li>
									<li class="nav-item">
										<a id="settingslink" class="nav-link" href="@Url.Action("Index", "User")">
											<i class="fa fa-user-cog"></i>
										</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
											<i class="fa fa-sign-out-alt"></i>
										</a>
									</li>
								</ul>
							}
						}
						else
						{
							<ul class="navbar-nav">
								<li class="nav-item">
									<a class="nav-link" href="@Url.Action("Register", "Account")">Register</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="@Url.Action("Login", "Account")">Log in</a>
								</li>
							</ul>
						}
					</div>
				</div>
			</div>
		</nav>
	</header>

	<main role="main" class="flex-shrink-0">
		<div id="toast-container" style="position: absolute; bottom: 70px; right: 20px;width:300px">
		</div>
		<div class="container-fluid">
			@RenderBody()
		</div>
	</main>

	<footer>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-top box-shadow">
			<div class="container-fluid">
				<div class="d-flex justify-content-between flex-fill">
					<ul class="navbar-nav">
						<li class="nav-item">
						</li>
					</ul>
					<ul class="navbar-nav">
						<li class="nav-item">
							<span class="nav-link">&copy;@DateTime.Now.Year - Chainstack</span>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</footer>

	<script src="~/Scripts/jquery-3.4.1.js"></script>
	<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
	<script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
	<script src="~/Scripts/bootstrap.bundle.js"></script>
	<script src="~/Scripts/DotMatrix.js"></script>
	@Scripts.Render("~/signalr/hubs")
	@RenderSection("scripts", required: false)
</body>
</html>
