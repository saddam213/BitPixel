@{
	var dependancyVersion = 2;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>BitPixel - @ViewBag.Title</title>
	<link href="~/Content/Bundles/bitPixel_bundle.css?v=@dependancyVersion" rel="stylesheet" />
</head>
<body>
	<div class="body-wrapper">
		<header>

			<nav class="navbar navbar-expand-sm nav- navbar-dark bg-dark border-bottom box-shadow">
				<div class="container-fluid">
					<a class="navbar-brand  text-primary" href="@Url.Action("Index", "Home")">
						<div class="d-flex align-items-center">
							<i class="fas fa-send-back" style="font-size:larger;padding-right:4px"></i>
							<span>BitPixel</span>
						</div>
					</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-navbar-collapse">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div id="main-navbar-collapse" class="navbar-collapse collapse">
						@if (Request.Browser.IsMobileDevice)
						{
							Html.RenderPartial("~/Views/Shared/_NavMobile.cshtml");
						}
						else
						{
							Html.RenderPartial("~/Views/Shared/_NavDesktop.cshtml");
						}
					</div>
				</div>
			</nav>

		</header>

		<main role="main">
			<div id="toast-container" class="noselect" style="position: absolute; bottom: 70px; right: 20px;width:300px;z-index:1000">
			</div>
			@RenderBody()
		</main>

		<footer>
			<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-top box-shadow">
				<div class="container-fluid">
					<div class="d-flex justify-content-between flex-fill">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link" href="/Help"><i class="fa fa-question-circle"></i> How To Play</a>
							</li>
						</ul>
						<ul class="navbar-nav">
							<li class="nav-item">
								<span class="nav-link">&copy;@DateTime.Now.Year - Chainstack Ltd.</span>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</footer>

	</div>

	@{ Html.RenderPartial("_SharedTemplates");}
	<script src="~/Scripts/Bundles/bitPixel_bundle.js?v=@dependancyVersion"></script>
	@Scripts.Render("~/signalr/hubs")
	@RenderSection("scripts", required: false)
</body>
</html>
