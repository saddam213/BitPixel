
<div class="d-flex justify-content-between flex-fill">
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link" href="@Url.Action("Index", "Home")">Games</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="@Url.Action("Index", "Scores")">Scoreboard</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="@Url.Action("History", "Prizes")">Prizeboard</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="@Url.Action("Index", "Awards")">Awards</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="@Url.Action("Index", "Prizes")">Prizes</a>
		</li>
	</ul>
	@if (Request.IsAuthenticated)
	{
		using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
		{
			@Html.AntiForgeryToken()

			<ul class="navbar-nav">
				<li class="nav-item">
					<a id="creditslink" class="btn btn-outline-primary mr-4" href="@Url.Action("Index", "Points")" style="width:200px">My Points</a>
				</li>

				@if (User.IsInRole("Admin"))
				{
					<li class="nav-item">
						<a class="nav-link" href="@Url.Action("Index", "Admin")">
							<i class="fa fa-shield"></i>
						</a>
					</li>
				}

				<li class="nav-item">
					<a id="settingslink" class="nav-link" href="@Url.Action("Index", "User")">
						<i class="fa fa-user-cog"></i>
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
						<i class="fa fa-sign-out-alt"></i>
					</a>
				</li>
			</ul>
		}
	}
	else
	{
		<ul class="navbar-nav">
			<li class="nav-item">
				<a class="btn btn-outline-primary mr-4" href="@Url.Action("Register", "Account")" style="width:200px">Sign Up Today!</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="@Url.Action("Login", "Account")">Sign in</a>
			</li>
		</ul>
	}
</div>