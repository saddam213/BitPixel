@model DotMatrix.Common.Team.CreateTeamModel
@{
	Layout = "~/Views/Shared/_Modal.cshtml";
}

@using (Ajax.BeginForm("CreateTeamModal", "Admin", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "simplemodal-data", InsertionMode = InsertionMode.Replace }))
{
	@Html.AntiForgeryToken()
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Create Team</h5>
				<a class="simplemodal-close" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</a>
			</div>
			<div class="modal-body">
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })

				<div class="form-group w-100">
					<small>Game</small>
					@Html.DropDownListFor(m => m.GameId, new SelectList(Model.Games, "Id", "Name"), "Please select", new { @class = "form-control form-control-sm" })
					@Html.ValidationMessageFor(m => m.GameId, "", new { @class = "text-danger" })
				</div>

				<div class="d-flex">
					<div class="form-group w-100 mr-1">
						<small>Name</small>
						@Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-sm" })
						@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
					</div>
					<div class="form-group w-100 ml-1">
						<small>Icon</small>
						@Html.TextBoxFor(m => m.Icon, new { @class = "form-control form-control-sm" })
						@Html.ValidationMessageFor(m => m.Icon, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					<small>Description</small>
					@Html.TextBoxFor(m => m.Description, new { @class = "form-control form-control-sm" })
					@Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
				</div>

				<div class="d-flex">
					<div class="form-group w-100 mr-1">
						<small>Color</small>
						@Html.TextBoxFor(m => m.Color, new { @class = "form-control form-control-sm" })
						@Html.ValidationMessageFor(m => m.Color, "", new { @class = "text-danger" })
					</div>
					<div class="form-group w-100 ml-1">
						<small>Rank</small>
						@Html.TextBoxFor(m => m.Rank, new { @class = "form-control form-control-sm" })
						@Html.ValidationMessageFor(m => m.Rank, "", new { @class = "text-danger" })
					</div>
				</div>

			</div>
			<div class="modal-footer btn-group">
				<button id="submit" type="submit" class="btn btn-outline-success">Create</button>
				<button type="button" class="simplemodal-close btn btn-outline-secondary">Cancel</button>
			</div>
		</div>
	</div>
}
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script>
	(async ($) => {

		$('form').submit(function () {
			const form = $(this);
			if (form.valid()) {
				$("#submit").attr("disabled", "disabled");
			}
		});

	})(jQuery);
</script>
