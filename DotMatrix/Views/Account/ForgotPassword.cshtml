@model DotMatrix.Common.Account.ForgotPasswordViewModel
@{
	ViewBag.Title = "Forgot Password";
}

<div class="d-flex justify-content-center p-5">
	<div class="card" style="width:100%;min-width:300px;max-width:500px">
		<div class="card-body">
			<h5 class="card-title">Forgot Your Password?</h5>
			<h6 class="card-subtitle mb-2 text-muted">Please fill in the form to reset your password.</h6>
			<div>
				@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
				{
					@Html.AntiForgeryToken()
					@Html.ValidationSummary("", new { @class = "text-danger" })
					<div class="form-group">
						<small>Registered Email Address</small>
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-sm" })
					</div>
					<div class="form-group">
						<input type="submit" class="btn btn-primary w-50" value="Reset Password" />
					</div>
				}
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/Scripts/jquery.validate.js"></script>
	<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
