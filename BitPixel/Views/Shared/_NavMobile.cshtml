<div class="d-flex justify-content-between flex-fill">
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link" href="@Url.Action("Index", "Home")">Games</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="@Url.Action("Index", "Scores")">Scoreboard</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="@Url.Action("History", "Prizes")">Prizeboard</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="@Url.Action("Index", "Awards")">Awards</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="@Url.Action("Index", "Prizes")">Prizes</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="@Url.Action("Index", "Gallery")">Gallery</a>
		</li>
	</ul>
	@if (Request.IsAuthenticated)
	{
		using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
		{
			@Html.AntiForgeryToken()

			<ul class="navbar-nav text-right w-100">
				<li class="nav-item">
					<h5><a id="creditslink" class="nav-link text-primary" href="@Url.Action("Index", "Points")">My Points</a></h5>
				</li>

				@if (User.IsInRole("Admin"))
				{
					<li class="nav-item">
						<a class="nav-link" href="@Url.Action("Index", "Admin")">
							Admin
						</a>
					</li>
				}

				<li class="nav-item">
					<a id="settingslink" class="nav-link" href="@Url.Action("Index", "User")">
						Settings
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
						Sign Out
					</a>
				</li>
			</ul>
		}
	}
	else
	{
		<ul class="navbar-nav text-right w-100">
			<li class="nav-item">
				<h5>	<a class="nav-link  text-primary" href="@Url.Action("Register", "Account")">Sign Up Today!</a></h5>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="@Url.Action("Login", "Account")">Sign in</a>
			</li>
		</ul>
	}
</div>