@model BitPixel.Common.Gallery.GalleryViewModel
@{
	ViewBag.Title = "Gallery";
}
<div class="d-flex flex-column justify-content-center align-items-center pl-3 pr-3">

	<div class="d-flex justify-content-center w-100 flex-wrap mt-2" style="min-width:340px;max-width:1200px">
		<div class="w-100 ml-2">
			<h2 class="card-title text-primary mb-0"><i class="fa fa-images mr-1"></i>Gallery</h2>
			<span class="ml-1">Browse completed BitPixel games</span>
		</div>
	</div>
	<div class="d-flex w-100" style="min-width:340px;max-width:1200px">

		<div class="d-flex flex-wrap">
			@foreach (var game in Model.Games.OrderByDescending(x => x.Rank))
			{
				<div class="card m-2 " style="width: 340px">
					<div class="card-img-top  ">
						<div class="d-flex justify-content-center align-items-center" style="height:300px">
							<img src="@string.Format("/Content/Images/Games/{0}/Gallery/pixels-thumb.png", game.Id)" class="img-fluid checker-board thumbnail" alt="" style="border:solid 1px rgba(0, 0, 0, 0.125);">
						</div>
					</div>
					<div class="card-body pt-0">
						<h4 class="card-title text-primary mb-0">@game.Name</h4>
						<p class="card-text mb-2">@game.Description</p>
						<a href="/Gallery/Game?gameId=@game.Id" class="btn btn-primary w-100">View Gallery</a>
					</div>
				</div>
			}
		</div>
	</div>
</div>

@section Scripts {
	<script>
		(async ($) => {

		})(jQuery);
	</script>
}
