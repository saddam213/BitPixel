			//	const name = $(this).data("name");
			//	const gameId = $(this).data("gameid");
			//	const result = await openModalGet("/Admin/UpdatePrizePoolModal", { gameId: gameId, name: name });
			//	if (result.Cancel === true) {
			//		return;
			//	}
			//	location.reload();
			//});

		})(jQuery);
	</script>
}