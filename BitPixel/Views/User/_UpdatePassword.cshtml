@using BitPixel.Helpers;
@model BitPixel.Common.Account.ChangePasswordViewModel
<div class="d-flex flex-fill">
	<div class="card"  style="width:100%">
		<div class="card-body">
			<h5 class="card-title text-primary">Change Password</h5>
			@*<h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>*@
			<div>
				@using (Ajax.BeginForm("ChangePassword", "User", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "passwordTarget" }, new { @class = "form-horizontal" }))
				{
					@Html.AntiForgeryToken()
					@Html.ModelValidationSummary()
					@Html.ValidationSummary(true)
					<div class="form-group">
						<small>Current Password</small>
						@Html.PasswordFor(m => m.OldPassword, new { @class = "form-control form-control-sm" })
						@Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						<small>New Password</small>
						@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-sm" })
						@Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						<small>Confirm New</small>
						@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-sm" })
						@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						<input type="submit" value="Change Password" class="btn btn-primary btn-sm w-50" />
					</div>
				}
			</div>
		</div>
	</div>
</div>